<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:weightSum="1"
              android:background="@color/black_overlay"
              android:paddingBottom="10dp"
              android:padding="10dp">


  <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/LTRSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/reading_direction"
        android:textColor="@color/text_color_blue"
        android:thumb="@mipmap/switch_thumb"
        android:track="@mipmap/switch_reading_mode_track"
        app:track="@mipmap/switch_reading_mode_track"
        android:textStyle="bold"
        android:layout_gravity="right"/>
        <!--android:thumb="@drawable/swith_selector"-->
        <!--android:track="@drawable/switch_bg"-->


  <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/splitPageSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color_blue"
        android:text="@string/split_page"
        android:textStyle="bold"
        android:thumb="@mipmap/switch_thumb"
        android:track="@mipmap/switch_split_page_track"
        app:track="@mipmap/switch_split_page_track"
        android:layout_gravity="right"
        />


</LinearLayout>
